<body>
	<%= form_for @quest do |f| %>
		
		<%= f.label "Category"%> <br />

		<%= f.radio_button :category, "health" %><%= f.label "Health" %>
		<%= f.radio_button :category, "strength" %><%= f.label "Strength" %>
		<%= f.radio_button :category, "stamina" %><%= f.label "Stamina" %>
		<%= f.radio_button :category, "intelligence" %><%= f.label "Intelligence" %><br />
		<br />

		<%= f.label :title%> <br />
		<%= f.text_field :title %> <br />

		<br />

		<%= f.label :description%> <br />
		<%= f.text_field :description %> <br />

		<br />

		<%= f.label :experience%> <br />
		<%= f.text_field :experience %> <br />

		<br />

		<%= f.check_box :available %> 
